{% extends 'base.html.twig' %}

{% block title %}{{'Quiz'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Quiz'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{'Id'|trans}}</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>{{'Title'|trans}}</th>
                <td>{{ quiz.title }}</td>
            </tr>
            <tr>
                <th>{{'Summary'|trans}}</th>
                <td>{{ quiz.summary }}</td>
            </tr>
            <tr>
                <th>{{'Number_of_questions'|trans}}</th>
                <td>{{ quiz.numberOfQuestions }}</td>
            </tr>
            <tr>
                <th>{{'Active'|trans}}</th>
                <td>{{ quiz.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>{{'Categories'|trans}}</th>
                {% for category in quiz.categories %}
                    <td>{{ category.longname }}</td>
                {% endfor %}
                
            </tr>
        </tbody>
    </table>

    <a href="{{ path('quiz_index') }}">{{'back to list'|trans}}</a>

    <a href="{{ path('quiz_edit', {'id': quiz.id}) }}">{{'edit'|trans}}</a>

    {{ include('quiz/_delete_form.html.twig') }}
{% endblock %}
