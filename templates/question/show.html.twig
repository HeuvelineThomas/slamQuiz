{% extends 'base.html.twig' %}

{% block title %}{{'Question'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Question'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Text</th>
