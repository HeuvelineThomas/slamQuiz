{% extends 'base.html.twig' %}

{% block title %}{{ 'Category'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Category'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Shortname'|trans }}</th>
                <td>{{ category.shortname }}</td>
            </tr>
            <tr>
                <th>{{ 'Longname'|trans }}</th>
                <td>{{ category.longname }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_index') }}">{{ 'back to list'|trans }}</a>

     {% if is_granted('ROLE_ADMIN') %}<a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">{{ 'Edit'|trans }}</a>{% endif %}

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
